<UserControl x:Class="Adalbertus.BudgetPlanner.Views.ExpensesView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:cal="http://www.caliburnproject.org"
             xmlns:i="clr-namespace:System.Windows.Interactivity;assembly=System.Windows.Interactivity"
             xmlns:ext="clr-namespace:Adalbertus.BudgetPlanner.Extensions"
             xmlns:extToolkit="http://schemas.microsoft.com/winfx/2006/xaml/presentation/toolkit/extended"
             xmlns:ctrl="clr-namespace:Adalbertus.BudgetPlanner.Controls"
>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="200" />
        </Grid.ColumnDefinitions>
        <Expander Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2" Margin="0,4,0,4">
            <Expander.Resources>
                <Style TargetType="{x:Type Expander}" BasedOn="{StaticResource {x:Type Expander}}">
                    <Style.Triggers>
                        <DataTrigger Binding="{Binding IsExpensesFiltered}" Value="True">
                            <Setter Property="BorderBrush" Value="OrangeRed" />
                            <Setter Property="BorderThickness" Value="1" />
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </Expander.Resources>
            <Expander.Header>
                <WrapPanel ext:MarginSetterExtension.Margin="2">
                    <TextBlock>Filtrowanie</TextBlock>
                    <CheckBox IsChecked="{Binding IsFilteringEnabled}" Content="Włącz filtrowanie" />
                </WrapPanel>
            </Expander.Header>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <GroupBox Grid.Column="0" MaxHeight="100" Margin="4">
                    <GroupBox.Header>
                        <WrapPanel>
                            <TextBlock Margin="4,0">Kategorie</TextBlock>
                            <ctrl:ImageButton ToolTip="Zaznacz wszystko" Margin="4,0" ImageUrl="Images/check-all.png"
                                              cal:Message.Attach="[Event Click] = [Action SelectAllFilterCashFlows()]"/>
                            <ctrl:ImageButton ToolTip="Odznacz wszystko" Margin="4,0" ImageUrl="Images/check-none.png"
                                              cal:Message.Attach="[Event Click] = [Action DeselectAllFilterCashFlows()]"/>
                        </WrapPanel>
                    </GroupBox.Header>
                    <ScrollViewer VerticalScrollBarVisibility="Auto" Margin="0,4,0,0">
                        <ItemsControl ItemsSource="{Binding Filter.CashFlows}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <CheckBox IsChecked="{Binding IsSelected, Mode=TwoWay}" Content="{Binding Name}"/>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </ScrollViewer>
                </GroupBox>

                <GroupBox Grid.Column="1" MaxHeight="100" Margin="4" VerticalAlignment="Top">
                    <GroupBox.Header>
                        <WrapPanel>
                            <TextBlock Margin="4,0">Grupy</TextBlock>
                            <ctrl:ImageButton ToolTip="Zaznacz wszystko" Margin="4,0" ImageUrl="Images/check-all.png"
                                              cal:Message.Attach="[Event Click] = [Action SelectAllFilterCashFlowGroups()]"/>
                            <ctrl:ImageButton ToolTip="Odznacz wszystko" Margin="4,0" ImageUrl="Images/check-none.png"
                                              cal:Message.Attach="[Event Click] = [Action DeselectAllFilterCashFlowGroups()]"/>
                        </WrapPanel>
                    </GroupBox.Header>
                    <ScrollViewer VerticalScrollBarVisibility="Auto" Margin="0,4,0,0">
                        <ItemsControl ItemsSource="{Binding Filter.CashFlowGroups}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <CheckBox IsChecked="{Binding IsSelected, Mode=TwoWay}" Content="{Binding Name}"/>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </ScrollViewer>
                </GroupBox>

                <Grid Grid.Column="2" Margin="4" VerticalAlignment="Top">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>
                    <TextBlock Grid.Row="0" Grid.Column="0" Margin="4">Data od</TextBlock>
                    <DatePicker Grid.Row="0" Grid.Column="1" Margin="4" SelectedDate="{Binding Filter.DateFrom, UpdateSourceTrigger=PropertyChanged}"
                                        SelectedDateFormat="Long"/>
                    <TextBlock Grid.Row="1" Grid.Column="0" Margin="4">Data do</TextBlock>
                    <DatePicker Grid.Row="1" Grid.Column="1" Margin="4" SelectedDate="{Binding Filter.DateTo, UpdateSourceTrigger=PropertyChanged}"
                                        SelectedDateFormat="Long"/>
                </Grid>

                <Grid Grid.Column="3" Margin="4" VerticalAlignment="Top">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition/>
                        <RowDefinition/>
                    </Grid.RowDefinitions>
                    <ctrl:NumericTextBox Grid.Row="0" Grid.Column="0" Value="{Binding Filter.ValueFrom}"                                         
                                         Width="70" Margin="0,2,2,2" Watermark="Kwota od"
                                         IsClearButtonVisible="True" DefaultValue="{x:Null}"/>
                    <ctrl:NumericTextBox Grid.Row="0" Grid.Column="1" Value="{Binding Filter.ValueTo}"
                                         Width="70" Margin="2,2,0,2" Watermark="Kwota do" DefaultValue="{x:Null}"
                                         IsClearButtonVisible="True" />
                    <ctrl:WatermarkTextBoxExt Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2" Margin="0,2" 
                                              IsClearButtonVisible="True" HorizontalAlignment="Stretch" 
                                              Text="{Binding Filter.Description, UpdateSourceTrigger=PropertyChanged}"
                                              Watermark="Opis"/>
                </Grid>
            </Grid>
        </Expander>
        <DataGrid Grid.Row="1" Grid.Column="0" HorizontalAlignment="Stretch" VerticalAlignment="Stretch"
                  ItemsSource="{Binding BudgetExpenses}" CanUserAddRows="False" CanUserDeleteRows="True"
                  AutoGenerateColumns="False" RowHeaderWidth="0" >            
            <DataGrid.Columns>
                <DataGridTemplateColumn CanUserReorder="False" CanUserResize="False">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <WrapPanel>
                                <!-- I don't know why setting ImageUrl in style doesn't work in DataTemplate -->
                                <ctrl:ImageButton ToolTip="Usuń" ImageUrl="Images/delete.png"
                                                  cal:Message.Attach="[Event Click] = [Action RemoveExpense($dataContext)]" />
                            </WrapPanel>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
                <DataGridTextColumn Header="Grupa" Binding="{Binding GroupName}" />
                <DataGridTemplateColumn Header="Kategoria" SortMemberPath="Flow.Name">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <ComboBox ItemsSource="{Binding DataContext.ExpensesGridCashFlows, RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type UserControl}}}" 
                                      SelectedItem="{Binding Flow, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                      IsSynchronizedWithCurrentItem="False" BorderThickness="0"
                                      />
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
                <DataGridTemplateColumn Header="Data" SortMemberPath="Date">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <DatePicker SelectedDate="{Binding Date, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                        SelectedDateFormat="Long" BorderThickness="0"/>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
                <DataGridTemplateColumn  Header="Kwota" SortMemberPath="Value">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <ctrl:NumericTextBox Value="{Binding Value, UpdateSourceTrigger=LostFocus}"
                                                 BorderThickness="0"/>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn >
                <DataGridTextColumn Header="Opis" Binding="{Binding Description}" Width="*"/>
            </DataGrid.Columns>
        </DataGrid>

        <Border Grid.Row="1" Grid.Column="1" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
            <StackPanel Margin="4">
                <Label>Kategoria</Label>
                <ComboBox ItemsSource="{Binding CashFlows}"
                          SelectedItem="{Binding SelectedExpenseCashFlow}"                          
                          VerticalAlignment="Stretch">
                    <i:Interaction.Triggers>
                        <ext:KeyTrigger Key="Enter" FocusTarget="{Binding ElementName=ExpenseValueControl}">
                        </ext:KeyTrigger>
                    </i:Interaction.Triggers>
                </ComboBox>

                <Label>Data</Label>
                <DatePicker x:Name="ExpenseDate" SelectedDate="{Binding SelectedExpenseDate}" 
                            SelectedDateFormat="Long">
                    <i:Interaction.Triggers>
                        <ext:KeyTrigger Key="Enter" FocusTarget="{Binding ElementName=ExpenseValueControl}">
                        </ext:KeyTrigger>
                    </i:Interaction.Triggers>
                </DatePicker>

                <Label>Kwota</Label>
                <ctrl:NumericTextBox x:Name="ExpenseValueControl" Value="{Binding ExpenseValue}"
                                     VerticalAlignment="Stretch"
                                     ext:FocusExtension.IsFocused="{Binding IsExpenseValueFocused}"
                                     ToolTip="Shift+Enter wstawi kwotę do kalkulatora, Ctrl+Enter wstawia kwotę do tabeli"
                                     >

                    <i:Interaction.Triggers>
                        <ext:KeyTrigger Key="Enter" Modifiers="Control">
                            <cal:ActionMessage MethodName="AddAndMoveToExpenseValue" />
                        </ext:KeyTrigger>
                        <ext:KeyTrigger Key="Enter" Modifiers="Shift">
                            <cal:ActionMessage MethodName="AddExpenseValueToCalculator" />
                        </ext:KeyTrigger>
                        <ext:KeyTrigger Key="Enter" FocusTarget="{Binding ElementName=ExpenseDescription}">
                        </ext:KeyTrigger>
                    </i:Interaction.Triggers>
                </ctrl:NumericTextBox>
                <GroupBox Visibility="{Binding IsCalculatorListBoxVisible, Converter={StaticResource Visibility}}">
                    <GroupBox.Header>
                        <WrapPanel>
                            <Label>Łączna wartość:</Label>
                            <Label Content="{Binding ExpenseTotalValue, Converter={StaticResource CurrencyFormatter}}"/>
                        </WrapPanel>
                    </GroupBox.Header>
                    <ScrollViewer VerticalScrollBarVisibility="Auto">
                        <ItemsControl x:Name="CalculatorListBox" ItemsSource="{Binding ExpenseValues}" 
                                          MaxHeight="150" FontSize="10">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <WrapPanel>
                                        <ctrl:ImageButton ToolTip="Usuń" ImageUrl="Images/delete.png" cal:Message.Attach="[Event Click] = [Action RemoveExpenseValueFromCalculator($dataContext)]" />
                                        <Label Content="{Binding Converter={StaticResource CurrencyFormatter}}" Width="80" />
                                    </WrapPanel>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </ScrollViewer>
                </GroupBox>

                <Label>Opis</Label>
                <extToolkit:WatermarkTextBox Name="ExpenseDescription" Text="{Binding ExpenseDescription, UpdateSourceTrigger=PropertyChanged}"
                                             VerticalAlignment="Stretch"                                             
                                             Watermark="Opis dodawanego wydatku">
                    <i:Interaction.Triggers>
                        <ext:KeyTrigger Key="Enter">
                            <cal:ActionMessage MethodName="AddAndMoveToExpenseValue" />
                        </ext:KeyTrigger>
                    </i:Interaction.Triggers>
                </extToolkit:WatermarkTextBox>
                <ctrl:ImageButton Content="Wstaw" ImageUrl="Images/basket-add.png" cal:Message.Attach="[Event Click] = [Action AddExpense()]" />
            </StackPanel>
        </Border>
    </Grid>
</UserControl>
