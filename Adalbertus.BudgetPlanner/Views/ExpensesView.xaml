<UserControl x:Class="Adalbertus.BudgetPlanner.Views.ExpensesView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:cal="http://www.caliburnproject.org"
             xmlns:i="clr-namespace:System.Windows.Interactivity;assembly=System.Windows.Interactivity"
             xmlns:ext="clr-namespace:Adalbertus.BudgetPlanner.Extensions"
             xmlns:extToolkit="http://schemas.microsoft.com/winfx/2006/xaml/presentation/toolkit/extended"
             xmlns:conv="clr-namespace:Adalbertus.BudgetPlanner.Converters"
             xmlns:ctrl="clr-namespace:Adalbertus.BudgetPlanner.Controls"
>
    <UserControl.Resources>
        <conv:StringFormatConverter x:Key="DateFormatter" StringFormat="{}{0:yyyy-MM-dd}" />
        <conv:StringFormatConverter x:Key="CurrencyFormatter" StringFormat="{}{0:c}" />
        <conv:StringFormatConverter x:Key="ProcentFormatter" StringFormat="{}{0:f}%" />
        <conv:VisibilityConverter x:Key="Visibility" />
    </UserControl.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="200" />
        </Grid.ColumnDefinitions>
        <Expander Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2" Header="Filtrowanie" Margin="0 4 0 4">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <GroupBox Grid.Column="0" MaxHeight="100" Margin="4">
                    <GroupBox.Header>
                        <WrapPanel>
                            <TextBlock Margin="4 0">Kategorie</TextBlock>
                            <Button Content="Zaznacz wszystko" Margin="4 0" cal:Message.Attach="[Event Click] = [Action SelectAllFilterCashFlows()]"/>
                            <Button Content="Odznacz wszystko" Margin="4 0" cal:Message.Attach="[Event Click] = [Action DeselectAllFilterCashFlows()]"/>
                        </WrapPanel>
                    </GroupBox.Header>
                    <ScrollViewer VerticalScrollBarVisibility="Auto" Margin="0 4 0 0">
                        <ItemsControl ItemsSource="{Binding Filter.CashFlows}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <CheckBox IsChecked="{Binding IsSelected, Mode=TwoWay}" Content="{Binding Name}"/>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </ScrollViewer>
                </GroupBox>
                <Grid Grid.Column="1" Margin="4">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>
                    <TextBlock Grid.Row="0" Grid.Column="0" Margin="4">Data od</TextBlock>
                    <DatePicker Grid.Row="0" Grid.Column="1" Margin="4" SelectedDate="{Binding Filter.DateFrom, UpdateSourceTrigger=PropertyChanged}"
                                        SelectedDateFormat="Long"/>
                    <TextBlock Grid.Row="1" Grid.Column="0" Margin="4">Data do</TextBlock>
                    <DatePicker Grid.Row="1" Grid.Column="1" Margin="4" SelectedDate="{Binding Filter.DateTo, UpdateSourceTrigger=PropertyChanged}"
                                        SelectedDateFormat="Long"/>
                </Grid>
                <Grid Grid.Column="2" Margin="4">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>
                    <TextBlock Grid.Row="0" Grid.Column="0" Margin="4">Kwota od</TextBlock>
                    <ctrl:NumericTextBox Grid.Row="0" Grid.Column="1" Margin="4" Value="{Binding Filter.ValueFrom}" 
                                         Width="100"/>
                    <TextBlock Grid.Row="1" Grid.Column="0" Margin="4">Kwota do</TextBlock>
                    <ctrl:NumericTextBox Grid.Row="1" Grid.Column="1" Margin="4" Value="{Binding Filter.ValueTo}"
                                         Width="100"/>
                </Grid>
                <Grid Grid.Column="3" Margin="4">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Grid.Column="0" Margin="4" VerticalAlignment="Top">Opis</TextBlock>
                    <TextBox Grid.Column="1" Margin="4" HorizontalAlignment="Stretch" VerticalAlignment="Top"
                             Text="{Binding Filter.Description, UpdateSourceTrigger=PropertyChanged}"/>
                </Grid>
            </Grid>
        </Expander>
        <DataGrid Grid.Row="1" Grid.Column="0" HorizontalAlignment="Stretch" VerticalAlignment="Stretch"
                  ItemsSource="{Binding BudgetExpenses}" CanUserAddRows="False" CanUserDeleteRows="True"
                  AutoGenerateColumns="False" RowHeaderWidth="0" >
            <DataGrid.Resources>
                <Style TargetType="{x:Type DataGrid}" BasedOn="{StaticResource {x:Type DataGrid}}">
                    <Style.Triggers>
                        <DataTrigger Binding="{Binding IsFilterEnabled}" Value="True">
                            <Setter Property="BorderBrush" Value="OrangeRed" />
                            <Setter Property="BorderThickness" Value="2" />
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </DataGrid.Resources>
            <DataGrid.Columns>
                <DataGridTemplateColumn CanUserReorder="False" CanUserResize="False">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <WrapPanel>
                                <!-- I don't know why setting ImageUrl in style doesn't work here (in datagrid) -->
                                <ctrl:ImageButton ToolTip="Usuń" ImageUrl="Images/delete.png"
                                                  cal:Message.Attach="[Event Click] = [Action RemoveExpense($dataContext)]" />
                            </WrapPanel>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>

                <DataGridTemplateColumn Header="Kategoria">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <ComboBox ItemsSource="{Binding DataContext.ExpensesGridCashFlows, RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type UserControl}}}" 
                                      SelectedItem="{Binding Flow, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                      IsSynchronizedWithCurrentItem="False" BorderThickness="0"
                                      />
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
                <DataGridTemplateColumn Header="Data">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <DatePicker SelectedDate="{Binding Date, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                        SelectedDateFormat="Long" BorderThickness="0"/>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
                <DataGridTemplateColumn  Header="Kwota">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <ctrl:NumericTextBox Value="{Binding Value, UpdateSourceTrigger=LostFocus}"
                                                 BorderThickness="0"/>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn >
                <DataGridTextColumn Header="Opis" Binding="{Binding Description}" Width="*"/>
            </DataGrid.Columns>
        </DataGrid>

        <Border Grid.Row="1" Grid.Column="1" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
            <StackPanel>
                <Label>Kategoria</Label>
                <ComboBox ItemsSource="{Binding CashFlows}"
                          SelectedItem="{Binding SelectedExpenseCashFlow}"                          
                          VerticalAlignment="Stretch">
                    <i:Interaction.Triggers>
                        <ext:KeyTrigger Key="Enter" FocusTarget="{Binding ElementName=ExpenseValueControl}">
                        </ext:KeyTrigger>
                    </i:Interaction.Triggers>
                </ComboBox>

                <Label>Data</Label>
                <DatePicker x:Name="ExpenseDate" SelectedDate="{Binding SelectedExpenseDate}" 
                            SelectedDateFormat="Long">
                    <i:Interaction.Triggers>
                        <ext:KeyTrigger Key="Enter" FocusTarget="{Binding ElementName=ExpenseValueControl}">
                        </ext:KeyTrigger>
                    </i:Interaction.Triggers>
                </DatePicker>

                <Label>Kwota</Label>
                <ctrl:NumericTextBox x:Name="ExpenseValueControl" Value="{Binding ExpenseValue}" VerticalAlignment="Stretch"
                                     ext:FocusExtension.IsFocused="{Binding IsExpenseValueFocused}"
                                     ToolTip="Wciśnięcie klawisza Ctrl+Enter wstawi kwotę do kalkulatora"
                                     >

                    <i:Interaction.Triggers>
                        <ext:KeyTrigger Key="Enter" Modifiers="Control">
                            <cal:ActionMessage MethodName="AddExpenseValueToCalculator" />
                        </ext:KeyTrigger>
                        <ext:KeyTrigger Key="Enter" FocusTarget="{Binding ElementName=ExpenseDescription}">
                        </ext:KeyTrigger>
                    </i:Interaction.Triggers>
                </ctrl:NumericTextBox>
                <GroupBox Visibility="{Binding IsCalculatorListBoxVisible, Converter={StaticResource Visibility}}">
                    <GroupBox.Header>
                        <WrapPanel>
                            <Label>Łączna wartość:</Label>
                            <Label Content="{Binding ExpenseTotalValue, Converter={StaticResource CurrencyFormatter}}"/>
                        </WrapPanel>
                    </GroupBox.Header>
                    <ScrollViewer VerticalScrollBarVisibility="Auto">
                        <ItemsControl x:Name="CalculatorListBox" ItemsSource="{Binding ExpenseValues}" 
                                          MaxHeight="150" FontSize="10">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <WrapPanel>
                                        <Button Content="Usuń" cal:Message.Attach="[Event Click] = [Action RemoveExpenseValueFromCalculator($dataContext)]" />
                                        <Label Content="{Binding Converter={StaticResource CurrencyFormatter}}" Width="80" />
                                    </WrapPanel>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </ScrollViewer>
                </GroupBox>

                <Label>Opis</Label>
                <extToolkit:WatermarkTextBox Name="ExpenseDescription" Text="{Binding ExpenseDescription, UpdateSourceTrigger=PropertyChanged}"
                                             VerticalAlignment="Stretch"                                             
                                             Watermark="Opis dodawanego wydatku">
                    <i:Interaction.Triggers>
                        <ext:KeyTrigger Key="Enter">
                            <cal:ActionMessage MethodName="AddAndMoveToExpenseValue" />
                        </ext:KeyTrigger>
                    </i:Interaction.Triggers>
                </extToolkit:WatermarkTextBox>
                <ctrl:ImageButton Content="Wstaw" cal:Message.Attach="[Event Click] = [Action AddExpense()]" />
            </StackPanel>
        </Border>
    </Grid>
</UserControl>
