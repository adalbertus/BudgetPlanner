<UserControl x:Class="Adalbertus.BudgetPlanner.Views.BudgetPlanView"
             x:Name="budgetPlanView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:cal="http://www.caliburnproject.org"
             xmlns:i="clr-namespace:System.Windows.Interactivity;assembly=System.Windows.Interactivity"
             xmlns:ext="clr-namespace:Adalbertus.BudgetPlanner.Extensions"
             xmlns:conv="clr-namespace:Adalbertus.BudgetPlanner.Converters"             
>
    <UserControl.Resources>
        <conv:StringFormatConverter x:Key="DateFormatter" StringFormat="{}{0:yyyy-MM-dd}" />
        <conv:StringFormatConverter x:Key="CurrencyFormatter" StringFormat="{}{0:c}" />
        <conv:StringFormatConverter x:Key="ProcentFormatter" StringFormat="{}{0:f}%" />

        <CollectionViewSource x:Key="GroupedBudgetPlanList" Source="{Binding BudgetPlanList}">
            <CollectionViewSource.GroupDescriptions>
                <PropertyGroupDescription PropertyName="GroupName" />
            </CollectionViewSource.GroupDescriptions>
        </CollectionViewSource>
    </UserControl.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Grid Grid.Row="0">
            <!--<Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>-->
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <GroupBox Grid.Row="0" Header="Podsumowanie budżetu">
                <WrapPanel>
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <Label Grid.Column="0" Grid.Row="0">Wszystkie wpływy łącznie</Label>
                        <Label Grid.Column="1" Grid.Row="0" Content="{Binding TotalSumOfRevenues, Converter={StaticResource CurrencyFormatter}}"/>

                        <Label Grid.Column="0" Grid.Row="1">Z poprzedniego okresu</Label>
                        <TextBox Grid.Column="1" Grid.Row="1" Text="{Binding TransferedValue, UpdateSourceTrigger=PropertyChanged}" Width="60"/>

                        <Label Grid.Column="0" Grid.Row="2">Wpływy z dochodów</Label>
                        <Label Grid.Column="1" Grid.Row="2" Content="{Binding SumOfRevenueIncomes, Converter={StaticResource CurrencyFormatter}}"/>

                        <Label Grid.Column="0" Grid.Row="3">Wpływy z oszczędności</Label>
                        <Label Grid.Column="1" Grid.Row="3" Content="{Binding SumOfRevenueSavings, Converter={StaticResource CurrencyFormatter}}"/>
                    </Grid>

                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <Label Grid.Column="0" Grid.Row="0">Suma planu budżetowego</Label>
                        <Label Grid.Column="1" Grid.Row="0" Content="{Binding TotalBudgetPlanValue, Converter={StaticResource CurrencyFormatter}}"/>

                        <Label Grid.Column="0" Grid.Row="1">Łącznie wydane</Label>
                        <WrapPanel Grid.Column="1" Grid.Row="1" Margin="0">
                            <Label Padding="0" Content="{Binding TotalExpenseValue, Converter={StaticResource CurrencyFormatter}}"/>
                            <Label Padding="4 0 0 0">[</Label>
                            <Label Padding="0" Content="{Binding TotalBalanceProcentValue, Converter={StaticResource ProcentFormatter}}" />
                            <Label Padding="0">]</Label>
                        </WrapPanel>


                        <Label Grid.Column="0" Grid.Row="2">Łącznie do wydania</Label>
                        <Label Grid.Column="1" Grid.Row="2" Content="{Binding TotalBalanceValue, Converter={StaticResource CurrencyFormatter}}"/>
                    </Grid>
                </WrapPanel>
            </GroupBox>
            <ContentControl x:Name="RevenuesViewModel" Grid.Row="2" />
        </Grid>

        <!-- Budget details -->
        <Grid Grid.Row="1" >
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="0.3*" MinWidth="300" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="0.7*" MinWidth="450"/>
            </Grid.ColumnDefinitions>

            <!-- Budget plans -->
            <GroupBox Grid.Column="0" Header="Plan budżetowy">
                <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                    <ItemsControl ItemsSource="{Binding Source={StaticResource GroupedBudgetPlanList}}" 
                                  HorizontalContentAlignment="Stretch" HorizontalAlignment="Stretch"
                                  >
                        <ItemsControl.GroupStyle>
                            <GroupStyle>
                                <GroupStyle.ContainerStyle>
                                    <Style TargetType="{x:Type GroupItem}">
                                        <Setter Property="Template">
                                            <Setter.Value>
                                                <ControlTemplate TargetType="{x:Type GroupItem}">
                                                    <StackPanel>
                                                        <StackPanel Orientation="Horizontal">
                                                            <Label Content="{Binding Name}" Background="Gray" HorizontalContentAlignment="Center">
                                                                <Label.LayoutTransform>
                                                                    <RotateTransform Angle="-90"/>
                                                                </Label.LayoutTransform>
                                                            </Label>
                                                            <ItemsPresenter/>
                                                        </StackPanel>
                                                        <Border Height="2" HorizontalAlignment="Stretch" BorderBrush="LightGray" BorderThickness="2"></Border>
                                                    </StackPanel>
                                                </ControlTemplate>
                                            </Setter.Value>
                                        </Setter>
                                    </Style>
                                </GroupStyle.ContainerStyle>
                            </GroupStyle>
                        </ItemsControl.GroupStyle>
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Expander>
                                    <Expander.Header>
                                        <StackPanel>
                                            <TextBlock Padding="0 4 0 4" FontWeight="Bold" Text="{Binding Name}"/>
                                            <UniformGrid Columns="2">
                                                <TextBlock Padding="0">Łącznie</TextBlock>
                                                <TextBlock Padding="0" Text="{Binding TotalValue, Converter={StaticResource CurrencyFormatter}}"/>

                                                <TextBlock Padding="0">Wydane</TextBlock>
                                                <WrapPanel>
                                                    <TextBlock Padding="0" Text="{Binding TotalExpenseValue, Converter={StaticResource CurrencyFormatter}}"/>
                                                    <TextBlock Padding="4 0 0 0">[</TextBlock>
                                                    <TextBlock Padding="0" Text="{Binding TotalBalanceProcentValue, Converter={StaticResource ProcentFormatter}}" />
                                                    <TextBlock Padding="0">]</TextBlock>
                                                </WrapPanel>

                                                <TextBlock Padding="0">Do wydania</TextBlock>
                                                <TextBlock Padding="0" Text="{Binding TotalBalanceValue, Converter={StaticResource CurrencyFormatter}}"/>
                                            </UniformGrid>
                                        </StackPanel>
                                    </Expander.Header>
                                    <ScrollViewer VerticalScrollBarVisibility="Auto">
                                        <DataGrid ItemsSource="{Binding Values, UpdateSourceTrigger=PropertyChanged}" AutoGenerateColumns="False"
                                              CanUserAddRows="True" CanUserDeleteRows="True" MaxHeight="100" 
                                              >
                                            <DataGrid.Columns>
                                                <DataGridTextColumn Header="Wartość" Binding="{Binding Value}" Width="60"/>
                                                <DataGridTextColumn Header="Opis" Binding="{Binding Description}" Width="*"/>
                                            </DataGrid.Columns>
                                        </DataGrid>
                                    </ScrollViewer>
                                </Expander>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </ScrollViewer>
            </GroupBox>

            <GridSplitter Grid.Column="1" Width="2"
                          HorizontalAlignment="Right" VerticalAlignment="Stretch" 
                          ResizeBehavior="PreviousAndNext" Background="LightSteelBlue"/>

            <!-- Budget expenses -->
            <GroupBox Grid.Column="2" Header="Realizacja budżetu">
                <ContentControl x:Name="ExpensesViewModel" />
            </GroupBox>
        </Grid>
    </Grid>
</UserControl>
