<UserControl x:Class="Adalbertus.BudgetPlanner.Views.BudgetPlanView"
             x:Name="budgetPlanView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:cal="http://www.caliburnproject.org"
             xmlns:i="clr-namespace:System.Windows.Interactivity;assembly=System.Windows.Interactivity"
             xmlns:ext="clr-namespace:Adalbertus.BudgetPlanner.Extensions"
             xmlns:extToolkit="http://schemas.microsoft.com/winfx/2006/xaml/presentation/toolkit/extended"
             xmlns:ctrl="clr-namespace:Adalbertus.BudgetPlanner.Controls"
>
    <UserControl.Resources>
        <CollectionViewSource x:Key="GroupedBudgetPlanList" Source="{Binding BudgetPlanList}">
            <CollectionViewSource.GroupDescriptions>
                <PropertyGroupDescription PropertyName="GroupName" />
            </CollectionViewSource.GroupDescriptions>
        </CollectionViewSource>
    </UserControl.Resources>

    <GroupBox Grid.Column="0" Header="Plan budżetowy">
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <ItemsControl ItemsSource="{Binding Source={StaticResource GroupedBudgetPlanList}}" 
                          HorizontalContentAlignment="Stretch" HorizontalAlignment="Stretch">
                <ItemsControl.GroupStyle>
                    <GroupStyle>
                        <GroupStyle.ContainerStyle>
                            <Style TargetType="{x:Type GroupItem}">
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="{x:Type GroupItem}">                                            
                                            <Grid Margin="4">
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="Auto"/>
                                                    <ColumnDefinition Width="*" />
                                                </Grid.ColumnDefinitions>
                                                <Border Grid.Row="0" Grid.RowSpan="2" CornerRadius="4 4 0 0" 
                                                        Background="{StaticResource LightBlueGradientVertical}" 
                                                        BorderBrush="LightGray" BorderThickness="1">
                                                    <Border.LayoutTransform>
                                                        <RotateTransform Angle="-90"/>
                                                    </Border.LayoutTransform>
                                                    <Label Content="{Binding Name}" HorizontalContentAlignment="Center" HorizontalAlignment="Stretch"
                                                           FontWeight="Bold"/>
                                                </Border>
                                                <Border Grid.Column="1" BorderBrush="LightGray" BorderThickness="0 1 1 1">
                                                    <ItemsPresenter Grid.Row="0" Grid.Column="1" VerticalAlignment="Stretch"/>
                                                </Border>
                                            </Grid>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </GroupStyle.ContainerStyle>
                    </GroupStyle>
                </ItemsControl.GroupStyle>
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Expander HorizontalContentAlignment="Stretch">
                            <Expander.Header>
                                <StackPanel>
                                    <TextBlock Padding="0 4 0 4" FontWeight="Bold" Text="{Binding Name}"/>
                                    <Grid>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                        </Grid.RowDefinitions>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="75"/>
                                            <ColumnDefinition Width="75"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>
                                        <TextBlock Grid.Row="0" Grid.Column="0" Padding="0">Łącznie</TextBlock>
                                        <TextBlock Grid.Row="0" Grid.Column="1" Padding="0" Text="{Binding TotalValue, Converter={StaticResource CurrencyFormatter}}" TextAlignment="Right"/>

                                        <TextBlock Grid.Row="1" Grid.Column="0" Padding="0">Wydane</TextBlock>
                                        <TextBlock Grid.Row="1" Grid.Column="1" Padding="0" Text="{Binding TotalExpenseValue, Converter={StaticResource CurrencyFormatter}}" TextAlignment="Right"/>
                                        <WrapPanel Grid.Row="1" Grid.Column="2">
                                            <TextBlock Padding="4 0 0 0">[</TextBlock>
                                            <TextBlock Padding="0" Text="{Binding TotalBalanceProcentValue, Converter={StaticResource ProcentFormatter}}" TextAlignment="Right"/>
                                            <TextBlock Padding="0">]</TextBlock>
                                        </WrapPanel>

                                        <TextBlock Grid.Row="2" Grid.Column="0" Padding="0">Do wydania</TextBlock>
                                        <TextBlock Grid.Row="2" Grid.Column="1" Padding="0"
                                                   Text="{Binding TotalBalanceValue, Converter={StaticResource CurrencyFormatter}}"
                                                   TextAlignment="Right">
                                            <TextBlock.Resources>
                                                <Style TargetType="TextBlock">
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding TotalBalanceValue, Converter={StaticResource LessThan}}" Value="True">
                                                            <Setter Property="FontWeight" Value="Bold" />
                                                            <Setter Property="Foreground" Value="Red" />
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </TextBlock.Resources>
                                        </TextBlock>


                                    </Grid>
                                </StackPanel>
                            </Expander.Header>
                            <Grid Margin="4">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition />
                                </Grid.RowDefinitions>
                                <Grid Grid.Row="0" Margin="0 0 0 4">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <ctrl:NumericTextBox x:Name="NewValueControl" Grid.Column="0" FontSize="10" Value="{Binding NewValue}"
                                                         ext:FocusExtension.IsFocused="{Binding IsNewValueFocused}"
                                                         ToolTip="Ctrl+Enter wstawia od razu wartość do tabeli"
                                                         Watermark="Wstaw wartość" Width="80">
                                        <i:Interaction.Triggers>
                                            <ext:KeyTrigger Key="Enter" Modifiers="Control">
                                                <cal:ActionMessage MethodName="AddNewValueToBudgetPlan">
                                                    <cal:Parameter Value="$dataContext"/>
                                                </cal:ActionMessage>
                                            </ext:KeyTrigger>
                                            <ext:KeyTrigger Key="Enter" FocusTarget="{Binding ElementName=NewDescription}">
                                            </ext:KeyTrigger>
                                        </i:Interaction.Triggers>
                                    </ctrl:NumericTextBox>
                                    <extToolkit:WatermarkTextBox x:Name="NewDescription" Grid.Column="1"
                                                                 Text="{Binding NewDescription}" Watermark="Opis"
                                                                 Margin="4 0 4 0" FontSize="10">
                                        <i:Interaction.Triggers>
                                            <ext:KeyTrigger Key="Enter" FocusTarget="{Binding ElementName=NewValueControl}">
                                                <cal:ActionMessage MethodName="AddNewValueToBudgetPlan">
                                                    <cal:Parameter Value="$dataContext"/>
                                                </cal:ActionMessage>
                                            </ext:KeyTrigger>
                                        </i:Interaction.Triggers>
                                    </extToolkit:WatermarkTextBox>
                                    <ctrl:ImageButton Grid.Column="2" ImageUrl="Images/save.png"  Content="Wstaw" IsEnabled="{Binding NewValue, Converter={StaticResource NumericToBool}}"
                                            cal:Message.Attach="[Event Click] = [Action AddNewValueToBudgetPlan($dataContext)]"
                                            FontSize="10"/>
                                </Grid>
                                <DataGrid Grid.Row="1" ItemsSource="{Binding Values, UpdateSourceTrigger=PropertyChanged}"
                                          AutoGenerateColumns="False" CanUserAddRows="False"
                                          CanUserReorderColumns="False" CanUserResizeColumns="False"
                                          CanUserDeleteRows="True" VerticalScrollBarVisibility="Auto"
                                          MaxHeight="140" FontSize="10"
                                          RowHeaderWidth="0">
                                    <DataGrid.Columns>
                                        <DataGridTemplateColumn Width="26">
                                            <DataGridTemplateColumn.CellTemplate>
                                                <DataTemplate>
                                                    <!-- I don't know why setting ImageUrl in style doesn't work in DataTemplate -->
                                                    <ctrl:ImageButton ToolTip="Usuń" ImageUrl="Images/delete.png"
                                                                      cal:Message.Attach="[Event Click] = [Action DeleteBudgetPlanItem($dataContext)]" />
                                                </DataTemplate>
                                            </DataGridTemplateColumn.CellTemplate>
                                        </DataGridTemplateColumn>
                                        <DataGridTemplateColumn Header="Wartość" Width="80">
                                            <DataGridTemplateColumn.CellTemplate>
                                                <DataTemplate>
                                                    <ctrl:NumericTextBox Value="{Binding Value, UpdateSourceTrigger=LostFocus}"
                                                                         BorderThickness="0"/>
                                                </DataTemplate>
                                            </DataGridTemplateColumn.CellTemplate>
                                        </DataGridTemplateColumn>
                                        <DataGridTextColumn Header="Opis" Binding="{Binding Description}" Width="*"/>
                                    </DataGrid.Columns>
                                </DataGrid>

                            </Grid>
                        </Expander>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>
    </GroupBox>
</UserControl>
