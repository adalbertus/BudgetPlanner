<Window x:Class="Adalbertus.BudgetPlanner.Views.ShellView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:cal="http://www.caliburnproject.org"
        xmlns:conv="clr-namespace:Adalbertus.BudgetPlanner.Converters"
        xmlns:ctrl="clr-namespace:Adalbertus.BudgetPlanner.Controls"
        WindowState="Maximized"
>
    <Window.Resources>
        <conv:StringFormatConverter x:Key="DateFormatter" StringFormat="{}{0:yyyy-MM-dd}" />
    </Window.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Border Grid.Row="0" Background="WhiteSmoke" BorderBrush="Black" BorderThickness="0 0 0 1">
            <StackPanel Orientation="Horizontal" Margin="4">                
                <ctrl:ImageButton Content="&lt;&lt;" ToolTip="Poprzedni budżet" cal:Message.Attach="[Event Click] = [Action ShowPreviousBudget()]"/>
                <WrapPanel>
                    <Label>Budżet za okres: </Label>
                    <Label Content="{Binding CurrentBudgetDate, Converter={StaticResource DateFormatter}}" Width="100" />
                    <ctrl:ImageButton Content="Pokaż" ToolTip="Pokaż budżet" cal:Message.Attach="[Event Click] = [Action ShowCurrentBudget()]"/>                    
                </WrapPanel>                
                <ctrl:ImageButton Content=">>"  ToolTip="Następny budżet" cal:Message.Attach="[Event Click] = [Action ShowNextBudget()]"/>
                <!--<ctrl:ImageButton Content=" + "  ToolTip="Nowy plan budżetowy" cal:Message.Attach="[Event Click] = [Action CreateNewBudgetPlan()]"/>-->
                
                <ctrl:ImageButton Content="Kategorie wydatków" HorizontalAlignment="Right"
                        cal:Message.Attach="[Event Click] = [Action ShowCashFlowTypes()]"/>
                <ctrl:ImageButton Content="Środki zewnętrzne" HorizontalAlignment="Right"
                        cal:Message.Attach="[Event Click] = [Action ShowExternalSources()]"/>
            
            </StackPanel>
        </Border>
        <ContentControl x:Name="ActiveItem" Grid.Row="1"
                        HorizontalAlignment="Stretch" VerticalAlignment="Stretch" />
    </Grid>
</Window>