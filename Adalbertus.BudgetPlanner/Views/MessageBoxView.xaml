<UserControl x:Class="Adalbertus.BudgetPlanner.Views.MessageBoxView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:cal="http://www.caliburnproject.org"
>
    <DockPanel LastChildFill="True">
        <WrapPanel DockPanel.Dock="Bottom" HorizontalAlignment="Stretch">
            <Button Content="Anuluj" cal:Message.Attach="[Event Click] = [Action Cancel()]"/>
            <Button Content="OK" cal:Message.Attach="[Event Click] = [Action Close()]"/>
        </WrapPanel>
        <TextBlock Text="{Binding Message}" />
    </DockPanel>
</UserControl>
